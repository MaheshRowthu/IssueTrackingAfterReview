<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<display-name>LoginCheck</display-name>
	<welcome-file-list>
		<welcome-file>input.jsp</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<error-page>
		<error-code>500</error-code>
		<location>/errorOccured.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/errorOccured.jsp</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.NullPointerException</exception-type>
		<location>/errorOccured.jsp</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/errorOccured.jsp</location>
	</error-page>
	<error-page>
		<exception-type>java.io.IOException</exception-type>
		<location>/errorOccured.jsp</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/errorOccured.jsp</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Thread.run</exception-type>
		<location>/errorOccured.jsp</location>
	</error-page>

	<!-- <error-page> <location>/errorOccured.jsp</location> </error-page> <error-page> 
		<exception-type>java.lang.NullPointerException</exception-type> <location>/errorOccured.jsp</location> 
		</error-page> -->
</web-app>